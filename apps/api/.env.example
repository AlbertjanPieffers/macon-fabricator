# Backend Environment Variables
# Copy to .env and fill in your values

# Server Configuration
PORT=8080

# MongoDB Connection
MONGO_URI=mongodb://user:password@host:27017
MONGO_DB=MACON_Production

# Machine Bridges (LAN/ZeroTier only)
PLC_BRIDGE_BASE=http://192.168.1.100:5001
FILE_BRIDGE_BASE=http://192.168.1.100:5100

# Security
ALLOWED_ORIGIN=https://your-frontend-domain.com
SUPABASE_JWKS=https://your-project.supabase.co/auth/v1/keys
REQUIRED_ROLE=office

# Development
NODE_ENV=development